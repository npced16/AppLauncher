<Window x:Class="AppLauncher.Presentation.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="App Launcher"
        Height="250"
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False">

    <Border Background="#2C2C2C"
            CornerRadius="10"
            BorderBrush="#3F3F46"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20"
                            ShadowDepth="0"
                            Opacity="0.5"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0"
                       Text="App Launcher"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Status Area -->
            <StackPanel Grid.Row="1"
                        VerticalAlignment="Center">
                <TextBlock x:Name="StatusText"
                           Text="버전 확인 중..."
                           FontSize="14"
                           Foreground="#A1A1AA"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,0,0,15"/>

                <ProgressBar x:Name="ProgressBar"
                             Height="6"
                             Minimum="0"
                             Maximum="100"
                             Value="0"
                             Foreground="#3B82F6"
                             Background="#3F3F46"
                             BorderThickness="0"
                             Margin="0,0,0,10"/>

                <TextBlock x:Name="ProgressText"
                           Text="0%"
                           FontSize="12"
                           Foreground="#71717A"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Close Button (Hidden by default) -->
            <Button x:Name="CloseButton"
                    Grid.Row="2"
                    Content="취소"
                    Width="80"
                    Height="30"
                    Background="#3F3F46"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    HorizontalAlignment="Center"
                    Visibility="Collapsed"
                    Click="CloseButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="5"
                                            Padding="10,5">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#52525B"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</Window>
