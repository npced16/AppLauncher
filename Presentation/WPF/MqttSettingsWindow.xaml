<Window x:Class="AppLauncher.Presentation.WPF.MqttSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MQTT 설정"
        Height="450"
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="#2C2C2C"
            CornerRadius="10"
            BorderBrush="#3F3F46"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20"
                            ShadowDepth="0"
                            Opacity="0.5"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0"
                       Text="MQTT 연결 설정"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Settings Form -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Broker Address and Port (Display only) -->
                    <TextBlock Text="브로커 정보"
                               Foreground="#A1A1AA"
                               FontSize="12"
                               Margin="0,0,0,5"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Broker Address (Display only) -->
                        <Border Grid.Column="0"
                                Background="#1E1E1E"
                                BorderBrush="#52525B"
                                BorderThickness="1"
                                CornerRadius="3"
                                Height="35">
                            <TextBlock x:Name="BrokerText"
                                       Foreground="#71717A"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="10,0"/>
                        </Border>

                        <!-- Port (Display only) -->
                        <Border Grid.Column="2"
                                Background="#1E1E1E"
                                BorderBrush="#52525B"
                                BorderThickness="1"
                                CornerRadius="3"
                                Height="35">
                            <TextBlock x:Name="PortText"
                                       Foreground="#71717A"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="10,0"/>
                        </Border>
                    </Grid>

                    <!-- Client ID -->
                    <TextBlock Text="클라이언트 ID"
                               Foreground="#A1A1AA"
                               FontSize="12"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="ClientIdTextBox"
                             Height="35"
                             Padding="10,8"
                             Background="#3F3F46"
                             Foreground="White"
                             BorderBrush="#52525B"
                             BorderThickness="1"
                             FontSize="14"
                             Margin="0,0,0,15"/>

                    <!-- Topic -->
                    <TextBlock Text="토픽"
                               Foreground="#A1A1AA"
                               FontSize="12"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="TopicTextBox"
                             Height="35"
                             Padding="10,8"
                             Background="#3F3F46"
                             Foreground="White"
                             BorderBrush="#52525B"
                             BorderThickness="1"
                             FontSize="14"
                             Margin="0,0,0,15"/>

                    <!-- Username -->
                    <TextBlock Text="사용자 이름 (선택사항)"
                               Foreground="#A1A1AA"
                               FontSize="12"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="UsernameTextBox"
                             Height="35"
                             Padding="10,8"
                             Background="#3F3F46"
                             Foreground="White"
                             BorderBrush="#52525B"
                             BorderThickness="1"
                             FontSize="14"
                             Margin="0,0,0,15"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button x:Name="SaveButton"
                        Content="저장"
                        Width="100"
                        Height="35"
                        Background="#3B82F6"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,10,0"
                        Click="SaveButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                Padding="10,5">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2563EB"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="CancelButton"
                        Content="취소"
                        Width="100"
                        Height="35"
                        Background="#3F3F46"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="CancelButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                Padding="10,5">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#52525B"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
